<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTML Manager interface</web-resource-name>
            <url-pattern>/a1.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>vendedor</role-name>
            <role-name>tesoureiro</role-name>
            <role-name>gestor</role-name>
        </auth-constraint>
    </security-constraint>  
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTML Manager interface</web-resource-name>
            <url-pattern>/a2.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tesoureiro</role-name>
            <role-name>gestor</role-name>
        </auth-constraint>
    </security-constraint>  
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>HTML Manager interface</web-resource-name>
            <url-pattern>/a3.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>gestor</role-name>
        </auth-constraint>
    </security-constraint>  
    
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>service protected area</realm-name>
        <form-login-config>
            <form-login-page>/acesso.jsp</form-login-page>
            <form-error-page>/autherr.html</form-error-page>
        </form-login-config>
    </login-config> 
    
    <security-role>
        <role-name>vendedor</role-name>
        <role-name>tesoureiro</role-name>
        <role-name>gestor</role-name>
    </security-role>
    
</web-app>
